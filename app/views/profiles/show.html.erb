<div class="row-fluid">

	<div clas="span12">
		<div class="row-fluid">
			<div class="span12">
				<div class="well"> 
				<%= link_to 'Donate', profile_donations_path(@profile), :class => 'btn btn-primary', style: 'width:100%; padding:10px 0;' %>				
				</div>
			</div>
		</div>

		<br />

		<div class="row-fluid">
			<div class="span12">
				<div class="well">
					<%= image_tag @profile.pict_url, id: 'profile_photo' %> 	
				</div>
			</div>
		</div>


		<div class="row-fluid">
			<div class="span12  text-center">
				<div class="well">
					<h4> <%= @profile.name %> </h4>
				</div>
			</div>
		</div>		


		<div class="row-fluid">
			<div class="span12 ">
				<div class="well">
					<p>  <%= @profile.bio %> </p>
				</div>
			</div>
		</div>



		<div class="row-fluid">
			<div class="span12">
				<div class="well">
				<%= link_to 'Donate', profile_donations_path(@profile), :class => 'btn btn-primary', style: 'width:100%; padding:10px 0;' %>
				</div>
			</div>
		</div>
	</div>
</div>

