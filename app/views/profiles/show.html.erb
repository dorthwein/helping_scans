<div class="row-fluid">
	<div class="span2">
		<%= render '/profiles/side_bar' %>
	</div>
	<div class="span6">
		<div class="row-fluid">
			<div class="span12">
				<h1> <%= @profile.name %> </h1>
			</div>
		</div>
		<div class="row-fluid">
			<div class="span12">
				<%= image_tag @profile.pict_url, id: 'profile_photo' %> 	
			</div>
		</div>
		<div class="row-fluid">
			<div class="span12">
				<p> 
					<%= @profile.bio %> 
				</p>
			</div>
		</div>		
	</div>


	<div class="span4">
		<div class="row-fluid">
			<div class="span12">
				<%= link_to 'Donate', profile_donations_path(@profile), :class => 'btn btn-primary', style: 'width:100%; padding:10px 0;' %>
			</div>
		</div>
	</div>
</div>

